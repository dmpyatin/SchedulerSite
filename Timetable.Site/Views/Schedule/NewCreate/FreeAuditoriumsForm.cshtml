<div class="modal hide fade" id ="auditoriumdialog" style="width:400px; overflow-x:hidden;">
  <div class="modal-header" style="overflow-x:hidden;">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h5>Свободные аудитории</h5>
  </div>
  <div class="modal-body" style="overflow-x:hidden;">
        <span>Здание</span>
        <select style="width:100%"  data-placeholder="Выберите здание" class="span5" id="buildings1" data-bind="options: $root.buildings, optionsText: 'Name', value: $root.currentBuilding">
                <option></option>
        </select>
    
        <span>Тип аудитории</span>
        <select style="width:100%;"  data-placeholder="Выберите тип аудитории" class="span5" id="auditoriumtype1" data-bind="options: $root.auditoriumTypes, optionsText: 'Name', value: $root.currentAuditoriumType">
                <option></option>
        </select>

        <span>Свободны</span>
        <select style="width:100%"  size="8" data-placeholder="Выберите аудиторию" class="span5" id="auditorium1" data-bind="options: $root.auditoriums, optionsText: 'Number', value: $root.currentAuditorium">
                <option></option>
        </select>
  </div>
  <div class="modal-footer" style="overflow-x:hidden;">
       <input type="button" class="btn btn-primary" value="Выбрать" data-bind="click: $root.FreeAuditoriumFormOkButton " />
       <input type="button" class="btn " value="Отмена" data-bind="click: $root.FreeAuditoriumFormCancelButton " />
  </div>
</div>